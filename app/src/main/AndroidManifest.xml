<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mdzirbel.werewolf">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RoleSelect" />
        <activity android:name=".Rounds" />
        <activity android:name=".DiscussionTimer" />
        <activity android:name=".RoleReveal" />
        <activity android:name=".Rules" />
        <activity android:name=".Credits" />
        <activity android:name=".RoundFunctions" />
        <activity android:name=".RoundListeners" />
        <activity android:name=".GenerateView" />
    </application>

</manifest>